# Editor configuration, see https://editorconfig.org
root = true

[*]
charset = utf-8
indent_style = tab
indent_size = 4
insert_final_newline = true
trim_trailing_whitespace = true
tab_width = 4

[*.{cs,csx}]
indent_style = tab
indent_size = 4
tab_width = 4

[*.ts]
quote_type = single
ij_typescript_use_double_quotes = false

[*.{html,scss,css}] 
indent_style = tab
indent_size = 4
tab_width = 4

[*.json]
indent_style = space
indent_size = 2

[*.md]
max_line_length = off
trim_trailing_whitespace = false
indent_style = space
indent_size = 2

[*.yml]
indent_style = space
indent_size = 2